    </div>

    <div class="col-md-4" id="chatbox"> {{!-- Video Call --}}
      <div class="panel panel-primary">
        <div id="video-container">
          <video autoplay id="second-video"></video>
          <video autoplay id="my-video" muted="true"></video>
            <div>
            	 <span id="Turn-off">
