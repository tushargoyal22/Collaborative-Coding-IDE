<h1 class="text-center"> Contact us </h1>

<form class="col-md-6 offset-md-3" method="post">

  {{#each errorMessages}}
    <div class="alert alert-danger">
      {{this.msg}}

    </div>
  {{/each}}
   
  <div class="form-group" >
    <label>Name</label>
    <input  class="form-control" placeholder="Your Name" name = "name">
  </div>

  <div class="form-group" > 
    <label >Email</label>
    <input type="email" class="form-control"  aria-describedby="emailHelp" placeholder="Your Email" name="email">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1" name = "message">Message</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name = "message" ></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>